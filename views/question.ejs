<div id="questions">
 <% if(quest.length>0)  { %>
  <%  quest.forEach(ques=>{ %>
    <div  class="allques">
      <h4 class="hques">Question</h4>
      <h3 class=eques><%= ques.que %></h3>
      <a><span id="likecount" class="glyphicon glyphicon-thumbs-up"><br>0</span></a>
      <a class =singlequest href="/question/<%= ques.field %>/<%= ques._id %>"><button id="btnans2">Answer</button></a>
      <%if(quest.answer!=""){%>
      <h3 class="ansques">Answer:  <%= ques.answer%></h3>
      <%}%>
    </div>
   <% })%>
 <% }else{  %>
    <h3>No blogs to show</h3>
<%  } %>
